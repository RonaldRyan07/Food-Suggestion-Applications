<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".AddNewRestrauntScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        tools:context=".addRegistrationActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="serif-monospace"
            android:text="Add New Restaurant"
            android:textAlignment="center"
            android:textColor="#1C5FC5"
            android:textColorHint="#E42021"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addReg_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:hint="@string/restaurant_name"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#61E42021"
            android:textColorHint="#E42021"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/addReg_small_desc_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="@string/small_description"
            android:maxLength="100"
            android:padding="10dp"
            android:textColor="#61E42021"
            android:textColorHint="#E42021"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/addReg_des_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="@string/full_description"
            android:padding="10dp"
            android:textColor="#61E42021"
            android:textColorHint="#E42021"
            android:textStyle="italic" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/addRegister_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:backgroundTint="#E42021"
                android:textColor="@color/white"
                android:text="@string/Add_Restraunt" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>